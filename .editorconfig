# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Indentation settings
indent_style = tab
indent_size = 4

# Maximum line length
max_line_length = 80

[*.c]
# Specific settings for C files
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.h]
# Specific settings for header files
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space

[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.html]
indent_size = 2
indent_style = space

[*.{css,scss}]
indent_size = 2
indent_style = space

[*.sql]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.ini]
indent_style = space
indent_size = 2

[*.conf]
indent_style = space
indent_size = 2

[*.spec]
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 2

[Containerfile]
indent_style = space
indent_size = 2